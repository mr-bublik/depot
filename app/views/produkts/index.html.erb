<p id="notice"><%= notice %></p>

<h1>Listing Produkts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produkts.each do |produkt| %>
      <tr>
        <td><%= produkt.title %></td>
        <td><%= produkt.description %></td>
        <td><%= produkt.image_url %></td>
        <td><%= produkt.price %></td>
        <td><%= link_to 'Show', produkt %></td>
        <td><%= link_to 'Edit', edit_produkt_path(produkt) %></td>
        <td><%= link_to 'Destroy', produkt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

